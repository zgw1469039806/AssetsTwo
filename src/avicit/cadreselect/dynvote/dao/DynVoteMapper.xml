    <select id="queryVoteById" resultMap="queryVoteById">
		select
		vote.ID as "VOTE_ID",
		vote.DYN_IT_ID,
		vote.DYN_VOTE_OPINION,
		vote.DYN_VOTE_ID,
		vote.DYN_VOTE_TYPE,
		item.TI_USER_SEX,
		item.TI_USER_POST,
		item.TI_USER_NAME,
		item.TI_USER_DEPT,
		item.TI_USER_BIRTH,
		tem.TEM_TITLE as "ITEM_TITLE",
        tem.TEM_NOTICE,
        tem.TEM_TYPE,
        tem.ID as "TEM_ID"
		from
		DYN_VOTE vote,
		DYN_TEM_ITEM item,
		DYN_TEMPLATE tem
        where
            item.ID = vote.DYN_IT_ID
        and tem.ID = item.TEM_ID
        and vote.TEM_ID = tem.ID
        and vote.DYN_IT_ID = item.ID
        and vote.DYN_VOTE_ID = #{id}
	</select>
